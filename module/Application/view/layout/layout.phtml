        function clock() {
          var tunis_time = new Date() ;
        tnh = tunis_time.getHours(),
        tnm =  tunis_time.getMinutes(),
        tns = tunis_time.getSeconds();
        document.querySelectorAll('.tunis-clock')[0].innerHTML  = harold(tnh) + ":" + harold(tnm) + ":" + harold(tns);
        function harold(standIn) {
          if (standIn < 10) {
            standIn = '0' + standIn
            }
          return standIn;
          }
        }
        setInterval(clock, 1000);

